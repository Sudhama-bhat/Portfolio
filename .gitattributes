# Set default text file handling
* text=auto

# Handle line endings for common file types
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.sh     text eol=lf

# Treat lock files as text
package-lock.json text eol=lf
yarn.lock         text eol=lf
pnpm-lock.yaml    text eol=lf

# Images and binary files
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.svg   text
*.webp  binary
*.mp4   binary
*.mp3   binary
*.woff  binary
*.woff2 binary
*.ttf   binary
*.eot   binary
*.otf   binary
*.pdf   binary
*.zip   binary
*.tgz   binary

# Prevent linguist from classifying minified files as source
*.min.js linguist-generated=true
*.min.css linguist-generated=true